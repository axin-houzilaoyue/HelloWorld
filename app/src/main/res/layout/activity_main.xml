<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ImageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <View
            android:id="@+id/v1"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#BFF44336" />
        <View
            android:id="@+id/v2"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#A9E91E63" />
        <View
            android:id="@+id/v3"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#B49C27B0" />
        <View
            android:id="@+id/v4"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#BA673AB7" />
        <View
            android:id="@+id/v5"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#BC3F51B5" />
        <View
            android:id="@+id/v6"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#BC2196F3" />
        <View
            android:id="@+id/v7"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#BFFFEB3B" />
        <View
            android:id="@+id/v8"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#BA4CAF50" />
    </LinearLayout>

    <View
        android:id="@+id/View1"
        android:layout_width="206dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#8B8BC34A" />

    <View
        android:id="@+id/View2"
        android:layout_width="206dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#8BFF5722" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="180dp"
        android:background="#8B9C27B0"
        android:clickable="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="Hello World"
        android:textColor="#6FFFEB3B"
        android:textSize="60sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="119dp"
        android:layout_marginBottom="232dp"
        android:autoText="true"
        android:background="#51E91E63"
        android:gravity="center"
        android:text="change"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        android:textSize="50sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_below="@+id/LL1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="359dp"
        android:showText="true"
        android:textColor="#03A9F4"
        android:textOff="#####"
        android:textOn="不存在十全十美的文章，如同不存在彻头彻尾的绝望"
        android:textSize="50sp" />

</RelativeLayout>